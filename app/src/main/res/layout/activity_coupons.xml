<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COUPONS"
        android:id="@+id/text_coupons" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal" android:textStyle="bold" android:textSize="50sp"
        android:layout_marginTop="10dp" android:layout_marginBottom="10dp"/>

    <ImageView
        android:layout_width="288dp"
        android:layout_height="222dp"
        android:id="@+id/imageCoupon"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/coupon_no"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "NEXT MONTH:"
        android:id="@+id/textNext" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal" android:textStyle="italic" android:textSize="30sp"
        android:layout_marginTop="10dp" android:layout_marginBottom="10dp"/>

    <ImageView
        android:layout_width="288dp"
        android:layout_height="50dp"
        android:id="@+id/imageNext"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.25"
        android:background="@drawable/coupon_next"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.4" />

    <Button
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:id="@+id/buttonBack" android:layout_gravity="center_horizontal"
        android:onClick="onBackButton" android:layout_marginBottom="0dp" android:padding="0dp"
        android:textSize="30sp"/>
</LinearLayout>