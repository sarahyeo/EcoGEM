<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#92D261"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/relative_layout">

    <TextView android:text="10" android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:id="@+id/fuelScore"
        android:nestedScrollingEnabled="false"
        android:background="#52961E"
        android:textSize="60dp"
        android:textAlignment="center"
        android:paddingLeft="10dp"
        android:paddingTop="0dp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/textView2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/oauth2LoginButton"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userName"
        android:layout_below="@+id/oauth2LoginButton"
        android:layout_alignParentStart="true"
        android:text="Hello Bob" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coupons"
        android:id="@+id/couponButton"
        android:onClick="onCouponsButton"
        android:clickable="true"
        android:layout_marginTop="77dp"
        android:layout_below="@+id/fuelScore"
        android:layout_toStartOf="@+id/oauth2LoginButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vehicles"
        android:id="@+id/vehiclesButton"
        android:clickable="true"
        android:onClick="onVehicleButton"
        android:layout_alignTop="@+id/couponButton"
        android:layout_toEndOf="@+id/oauth2LoginButton" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="GEM Score:"
        android:id="@+id/textView2"
        android:layout_above="@+id/fuelScore"
        android:layout_centerHorizontal="true"
        android:background="#52961E"
        android:textSize="15dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Goal: 8"
        android:id="@+id/goal"
        android:background="#396E11"
        android:textSize="24dp"
        android:padding="5dp"
        android:layout_above="@+id/textView2"
        android:layout_alignEnd="@+id/goalIcon" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/goalIcon"
        android:background="@drawable/goalReached"
        android:layout_alignBottom="@+id/goal"
        android:layout_alignEnd="@+id/textView2" />

</RelativeLayout>
